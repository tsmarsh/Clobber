<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
	https://raw.github.com/impetus-opensource/Kundera/Kundera-2.0.4/kundera-core/src/test/resources/META-INF/persistence_2_0.xsd"
             version="2.0">

    <!-- A JPA Persistence Unit -->
    <persistence-unit name="inventory_server" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- JPA entities must be registered here -->
        <class>com.tailoredshapes.inventoryserver.model.User</class>
        <class>com.tailoredshapes.inventoryserver.model.Category</class>
        <class>com.tailoredshapes.inventoryserver.model.MetricType</class>
        <class>com.tailoredshapes.inventoryserver.model.Metric</class>
        <class>com.tailoredshapes.inventoryserver.model.Inventory</class>

        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
            <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:inventory"/>
            <property name="javax.persistence.jdbc.user" value="SA"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.cache.provider_class" value="org.hibernate.cache.HashtableCacheProvider" />
        </properties>
    </persistence-unit>

    <persistence-unit name="inventory_server_cassandra">
        <provider>com.impetus.kundera.KunderaPersistence</provider>
        <class>com.tailoredshapes.inventoryserver.model.User</class>
        <class>com.tailoredshapes.inventoryserver.model.Category</class>
        <class>com.tailoredshapes.inventoryserver.model.MetricType</class>
        <class>com.tailoredshapes.inventoryserver.model.Metric</class>
        <class>com.tailoredshapes.inventoryserver.model.Inventory</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="kundera.nodes" value="192.168.33.10" />
            <property name="kundera.port" value="9160" />
            <property name="kundera.keyspace" value="test" />
            <property name="kundera.dialect" value="cassandra" />
            <property name="kundera.ddl.auto.prepare" value="create" />
            <property name="kundera.client" value="thrift" />
            <property name="kundera.client.lookup.class"
                      value="com.impetus.client.cassandra.thrift.ThriftClientFactory" />
        </properties>
    </persistence-unit>

</persistence>