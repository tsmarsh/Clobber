<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.tailoredshapes.inventoryserver.model">
    <class name="Inventory">
        <id name="id"/>
        <many-to-one name="parent" cascade="all"/>
        <many-to-one name="category" cascade="all"/>
        <bag name="metrics" cascade="all">
            <key column="id"/>
            <many-to-many class="Metric"/>
        </bag>
    </class>
</hibernate-mapping>