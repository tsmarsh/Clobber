<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.tailoredshapes.inventoryserver.model">
    <class name="User">
        <id name="id" />
        <property name="name"/>
        <property name="privateKey"/>
        <property name="publicKey" />
        <set name="inventories" table="user_inventories" cascade="all">
            <key column="user_id"/>
            <many-to-many class="Inventory">
                <column name="inventory_id"/>
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>