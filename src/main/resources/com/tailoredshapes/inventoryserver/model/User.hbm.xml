<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.tailoredshapes.inventoryserver.model">
    <class name="User">
        <id name="id" />
        <property name="name"/>
        <property name="privateKey"/>
        <property name="publicKey" />
        <map name="inventories">
            <key column="id"/>
            <index column="inventory_id" type="java.lang.Long"/>
            <many-to-many class="Inventory"/>
        </map>
    </class>
</hibernate-mapping>